# Database Configuration (XAMPP/WAMP default)
DB_HOST=localhost
DB_NAME=mini_cloudinary
DB_USER=root
DB_PASS=

# Application Configuration
APP_URL=http://localhost/mini-cloudinary
APP_NAME=Mini Cloudinary
APP_ENV=development

# Security (generate your own keys)
JWT_SECRET=local-dev-key-2024-mini-cloudinary
ENCRYPTION_KEY=local-encryption-key-2024

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf
UPLOAD_PATH=uploads

# Thumbnail Settings
THUMBNAIL_WIDTH=200
THUMBNAIL_QUALITY=80
COMPRESSION_QUALITY=85

# Plan Limits (in bytes)
FREE_STORAGE_LIMIT=536870912      # 512MB
FREE_FILE_SIZE_LIMIT=5242880      # 5MB
FREE_MONTHLY_BANDWIDTH=1073741824 # 1GB